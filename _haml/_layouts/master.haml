!!!
\{% assign title = "Nicolay Hvidsten" %}
%html
  %head
    %meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    %meta(name="Nicolay Hvidsten" content="Nicolay Hvidsten, Programming Ruby")
    %meta(name="robots" content="Nicolay Hvidsten, ruby, rails, programming")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(property="og:title" content="Nicolay Hvidsten, developer")
    %link(rel="stylesheet" href="{{ site.data.assets.css_url }}" async)
    %title {%if page.title %}{{ page.title }}{% else %}{{ title }}{% endif %}
    %link(rel="shortcut icon" type="image/svg" href="/public/images/avatar.svg")
  
  %body
    %header
      %div.header-content.flex-vertical
        %a(href="/")
          %img(src="/public/images/avatar.svg")
        %nav
          %ul
            \{% assign url = page.url|remove:'index.html' %}
            \{% for link in site.navigation %}
            %li
              \{% if url contains link.url %}
              %a{href: "{{link.url}}", class: "active"} {{ link.text }}
              \{% else %}
              %a(href="{{link.url}}") {{ link.text }}
              \{% endif %}
            \{% endfor %}
    %main
      {{ content }} 

    %script(src="{{ site.data.assets.vendor_js_url }}" type="text/javascript")
    %script(src="{{ site.data.assets.js_url }}" type="text/javascript")



    
      
